Team Ninjas

Regiment NinjaArcher
{
	Size = 10;
	Type = Ranged;
	Range = 2;
	Damage = 4;
	Health = 4;
	Movement = 1;
	AttackSpeed = 1;
	RegimentPosition = Position(8,3);
	Behaviour SilentMonkeysBehavoiur1
	{
		Regiment enemy = SearchForEnemies();
		if (enemy.Distance <= Range)
		{
			Attack(enemy);
			if(enemy.Distance < 2)
			{
				MoveAway(enemy);
			}
		}
		else
		{
			MoveTowards(enemy);
		}
	}
}
