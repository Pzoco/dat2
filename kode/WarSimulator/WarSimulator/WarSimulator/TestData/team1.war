Team NinjaMonkeys1

Regiment Soldier
{
	Size = 10;
	Type = Melee;
	Range = 10;
	Damage = 2;
	Health = 4;
	Movement = 1;
	AttackSpeed = 1;
	RegimentPosition = Position(0,0);
	Behaviour SilentMonkeysBehavoiur1
	{
		Regiment enemy = SearchForEnemies();
		if (enemy.Distance <= Range)
		{
			Attack(enemy);
		}
		else
		{
			MoveTowards(enemy);
			Attack(enemy);
		}
	}
}
