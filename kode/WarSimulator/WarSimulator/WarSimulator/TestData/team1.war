Team Red

Regiment RedArcher1
{
	Size = 4;
	Type = Ranged;
	Range = 10;
	Damage = 8;
	Health = 4;
	Movement = 2;
	AttackSpeed = 1;
	RegimentPosition = Position(1,5);
	Behaviour NormalArcherBehaviour
	{
		Regiment enemy = SearchForEnemies();
		if (enemy.Distance <= Range)
		{
			Attack(enemy);
			if(enemy.Distance < 5)
			{
				MoveAway(enemy);
				MoveAway(enemy);
			}
			else
			{
				MoveTowards(enemy);
			}
		}
	}
}
