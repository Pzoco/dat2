Team NinjaMonkeys2

Regiment Archer
{
	Size = 10;
	Type = Ranged;
	Range = 10;
	Damage = 5;
	Health = 5;
	Movement = 3;
	AttackSpeed = 1;
	RegimentPosition = Position(4,4);
	Behaviour SilentMonkeysBehavoiur2
	{
		Regiment enemy = SearchForEnemies();
		if (enemy.Distance <= Range)
		{
			if(enemy.Distance > 2)
			{
				Attack(enemy);
			}
			else
			{
				MoveAway(enemy);
				MoveAway(enemy);
				Attack(enemy);
			}
		}
	}
}