Team NinjaMonkeys2

Regiment SilentMonkeys2
//bueskytter
{
	Size = 200;
	Type = Ranged;
	Range = 120;
	Damage = 2;
	Health = 10;
	Movement = 30;
	AttackSpeed = 1;
	RegimentPosition = Position(2,2);
	Behaviour SilentMonkeysBehavoiur2
	{
		Regiment enemy = SearchForEnemies(Size<10);
		If (enemy.Distance <= Range)
		{
			Attack(enemy);
		}
		Else If (enemy.Distance <= Range+Movement)
		{
			While(enemy.Distance < Range)
			{
				MoveTowards(enemy);
			}
			Attack(enemy);
		}
		If (enemy.Distance <= Range)
		{
			MoveAway(enemy);
			If(enemy.Distance <= Range)
			{
				Attack(enemy);
			}
		}
	}
}