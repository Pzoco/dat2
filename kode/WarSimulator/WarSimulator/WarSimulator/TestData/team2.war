Team NinjaMonkeys2

Regiment Warrior
{
	Size = 20;
	Type = Melee;
	Range = 10;
	Damage = 2;
	Health = 10;
	Movement = 30;
	AttackSpeed = 1;
	RegimentPosition = Position(6,2);
	Behaviour SilentMonkeysBehavoiur2
	{
		Regiment enemy = SearchForEnemies();
		if (enemy.Distance <= Range)
		{
			Attack(enemy);
		}
		else if (enemy.Distance <= Range+Movement)
		{
			while(enemy.Distance < Range)
			{
				MoveTowards(enemy);
			}
			Attack(enemy);
		}
		if (enemy.Distance <= Range)
		{
			MoveAway(enemy);
			if(enemy.Distance <= Range)
			{
				Attack(enemy);
			}
		}
	}
}